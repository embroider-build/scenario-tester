{
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node"
  },
  "compilerOptions": {
    "target": "ES2020",
    "moduleResolution": "node",
    "declaration": true,
    "esModuleInterop": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "sourceMap": true,
    "inlineSources": true,
    "strict": true
  },
  "include": [
      "*.ts"
  ],
  "exclude": [
    "node_modules/**/*",
    "typedoc",
    "build"
  ]
}
